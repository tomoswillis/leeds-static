{
	"paths": {
		"src": "resources/assets",
		"dest": "public",
		"compiled": "compiled"
	},
	"config": {
		"browserSync": {
			"files": [
				"public/compiled/css",
				"public/compiled/js",
				"public/**/*.html",
				"!**/*.map"
			],
			"ghostMode": false,
			"notify": false,
			"open": false,
			"port": 5757,
			"proxy": "web:80",
			"snippetOptions": {
				"rule": {
					"match": "</body>"
				}
			},
			"ui": false
		},
		"css": {
			"files": [
				"app.css"
			],
			"autoprefixer": {
				"cascade": false
			},
			"cleanCss": {},
			"purgeCssWhitelist": [],
			"purgeCssWhitelistPatterns": []
		},
		"js": {
			"files": [
				"app.js"
			],
			"extract": []
		}
	}
}
